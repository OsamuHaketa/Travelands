<div class="container my-2">
  <h3><strong>タグ一覧</strong></h3>
  <div class="row my-2">
    <%= form_tag(tag_path, :method => "get") do %>
    <%= text_field_tag :search %>
    <%= submit_tag "タグを検索" ,:tagname => nil ,class: "btn btn-sm btn-outline-success"%>
    <% end %>
  </div>
  <div class="d-flex flex-wrap">
    <% @tag_list.sort {|a,b| b.posts.size <=> a.posts.size}.each do |tag| %>
    <% if tag.posts.count != 0 %>
      <div class="col-12 col-sm-4 border">
        <%= link_to tag.tagname, tag_posts_path(tag.id),style:"font-size:1.3em;" %>
        <%= "(#{tag.posts.count}件)" %>
      </div>
      <% end %>
    <% end %>
  </div>
  <div class="d-flex justify-content-center mt-3">
    <%= paginate @tag_list %>
  </div>
</div>