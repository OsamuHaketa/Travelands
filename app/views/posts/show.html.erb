<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= image_tag @post.get_post_image, size:'50x50' %></td>
      <td><%= @post.title %></td>
      <td><%= @post.body %></td>
    </tr>
  </tbody>
</table>

<div>
  <%= form_with model: [@post, @post_comment], local: true do |f| %>
    <%= f.text_area :comment, placeholder:"コメント欄" %>
    <%= f.submit "コメントする" %>
  <% end %>
</div>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @post.post_comments.each do |post_comment| %>
      <tr>
        <td><%= post_comment.user.name %></td>
        <td><%= post_comment.comment %></td>
      </tr>
    <% end %>
  </tbody>
</table>