<div class="container">
<% @tag_list.each do |tag| %>
  <%=link_to tag.tagname, tag_posts_path(tag.id) %>
  <%= "(#{tag.posts.count})" %>
<% end %>
<br>
<strong><%= "#{@tag.tagname}" %></strong>
<%= "の投稿一覧" %>
<br>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag post.get_post_image, size:'500x350' %></td>
        <td><%= link_to post.user.name, user_path(post.user) %></td>
        <td><%= link_to post.title, post %>
          <div id="star-rate<%= post.id%>"></div>
          <script>
            $('#star-rate<%= post.id%>').raty({
              size      : 36,
              starOff   : '<%= asset_path('star-off.png') %>',
              starOn    : '<%= asset_path('star-on.png') %>',
              starHalf  : '<%= asset_path('star-half.png') %>',
              half      : true,
              readOnly  : true,
              score: <%= post.star %>,
            });
          </script>
        </td>
        <td><%= post.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>