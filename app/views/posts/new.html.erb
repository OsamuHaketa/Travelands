<div class="row">
  <div class="col-12 mb-5 offset-3">
    <%= form_with model: @post, url: posts_path, local: true do |f| %>
      <form>
        <div class="form-group col-xs-9">
          <%= f.label :画像, class: "col-sm-2" %>
          <%= f.file_field :post_image, accept: "image/*" %>
        </div>
        <div class="form-group col-xs-9">
          <%= f.label :タイトル, class: "col-sm-2" %>
          <%= f.text_field :title, placeholder: "商品名", class: "col-sm-3" %>
        </div>
        <div class="form-group col-xs-9">
          <%= f.label :投稿内容, class: "col-sm-2 align-top" %>
          <%= f.text_area :body, placeholder: "例文", class: "col-sm-3", rows:"5" %>
        </div>
        <div class="form-group col-8 mx-auto">
          <%= f.submit "投稿する", class: "btn btn-success col-sm-2" %>
        </div>
      </form>
    <% end %>
  </div>
</div>