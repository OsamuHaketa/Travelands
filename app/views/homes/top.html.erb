<div class="container">
  <div class="card d-flex align-items-center justify-content-center text-center">
    <img src="/assets/top.jpg" class="card-img">
    <div class="card-img-overlay d-flex justify-content-center align-items-center">
      <div class="py-4 col-8 col-md-5"  style="background-color:rgba(255,255,255,0.8); ">
        <h3 style="font-family:cursive; font-size:26px;"><b>Travelands</b></h3>
      </div>
    </div>
  </div>
  <% @tag_list.each do |tag| %>
    <%= link_to tag.tagname, tag_posts_path(tag.id) %>
    <%= "(#{tag.posts.count}ä»¶)" %>
  <% end %>
  <div class="table-responsive">
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th class="col-7"></th>
          <th class="col-2"></th>
          <th class="col-3"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td>
              <%= link_to post_path(post.id)  do %>
              <%= image_tag post.get_post_image, width: '100%' %>
              <% end %>
            </td>
            <td>
              <%= image_tag post.user.get_profile_image, width: '40px',height: "40px",class:"rounded-circle" %>
              <%= link_to post.user.name, user_path(post.user) %>
            </td>
            <td><%= link_to post.title, post %>
              <div id="star-rate<%= post.id%>"></div>
              <script>
                $('#star-rate<%= post.id%>').empty();
                $('#star-rate<%= post.id%>').raty({
                  size      : 36,
                  starOff   : '<%= asset_path('star-off.png') %>',
                  starOn    : '<%= asset_path('star-on.png') %>',
                  starHalf  : '<%= asset_path('star-half.png') %>',
                  half      : true,
                  readOnly  : true,
                  score: <%= post.star %>,
                });
              </script>
            </td>
          </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</div>