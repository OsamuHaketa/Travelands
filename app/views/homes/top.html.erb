<h1>TOP</h1>

<%= link_to "新規投稿",new_post_path %>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag post.get_post_image, size:'50x50' %></td>
        <td><%= link_to post.title, post %></td>
        <td><%= post.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>