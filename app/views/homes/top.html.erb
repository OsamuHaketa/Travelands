<div class="container">
<div class=" card d-flex align-items-center justify-content-center text-center">
        <img src="/assets/top.jpg" class="card-img" alt="Card image">
        <div class="card-img-overlay ">
          <div class="px-5 py-4"  style="background-color:rgba(255,255,255,0.5); font-family: sans-serif;">
            <h3 style=font-family:cursive;><b>Welcome to Travelands！</b></h3>
          </div>
        </div>
      </div>
  <% @tag_list.each do |tag| %>
  <%= link_to tag.tagname, tag_posts_path(tag.id) %>
  <%= "(#{tag.posts.count}件)" %>
  <% end %>
  <div class="table-responsive">
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th class="col-7"></th>
        <th class="col-2"></th>
        <th class="col-3">タイトル</th>
      </tr>
    </thead>
    <% @posts.each do |post| %>
      <tbody>
        <tr>
          <td>
            <%= link_to post_path(post.id)  do %>
            <%= image_tag post.get_post_image, width: '100%' %>
            <% end %>
          </td>
          <td><%= link_to post.user.name, user_path(post.user) %></td>
          <td><%= link_to post.title, post %>
            <div id="star-rate<%= post.id%>"></div>
            <script>
              $('#star-rate<%= post.id%>').empty();
              $('#star-rate<%= post.id%>').raty({
                size      : 36,
                starOff   : '<%= asset_path('star-off.png') %>',
                starOn    : '<%= asset_path('star-on.png') %>',
                starHalf  : '<%= asset_path('star-half.png') %>',
                half      : true,
                readOnly  : true,
                score: <%= post.star %>,
              });
            </script>
          </td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div></div>