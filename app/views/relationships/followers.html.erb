<div class="container">
  <div class="table-responsive">
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th class="col-12 d-flex justify-content-center">フォロワーの一覧</th>
        </tr>
      </thead>
      <% @users.each do |user| %>
        <tbody>
          <tr>
            <td class="d-flex justify-content-center align-items-center">
              <%= image_tag user.get_profile_image, width: '40px',height: "40px", class:"rounded-circle" %><br>
              <%= link_to user.name, user_path(user), class:"ml-3" %>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
  <div class="d-flex justify-content-center">
    <%= paginate @users %>
  </div>
</div>