<div class="container">
  <div class="table-responsive">
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th class="col-6">フォロワーの一覧</th>
        </tr>
      </thead>
      <% @users.each do |user| %>
        <tbody>
          <tr>
            <td>
              <%= image_tag user.get_profile_image, width: '40px',height: "40px",class:"rounded-circle" %><br>
              <%= link_to user.name, user_path(user) %>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>